.detail_info .info_price {
  padding: 10rpx;
  font-size: 40rpx;
  font-weight: bold;
  color: var(--themeColor);
}
.detail_xinxi {
  border-bottom: 20rpx solid #edece8;
  padding-bottom: 20rpx;
}
.detail_info .info_detail .info_name {
  font-family: SimHei;
  font-weight: 400;
  padding-left: 27rpx;
  padding-top: 28rpx;
  padding-bottom: 28rpx;
  border-bottom: 6rpx solid #edece8;
  font-size: 30rpx;
  color: #000000;
}
.xinxi_price{
  padding-left: 20rpx;
  padding-top: 15rpx;
  font-size: 27rpx;
  font-family: SimHei;
  font-weight: 400;
  color: #969696;
}
.xinxi_num{
  color: #000000;
}
.detail_tel{
  border-bottom: 20rpx solid #edece8;
}
.tel_header{
  padding-left: 20rpx;
  padding-top: 15rpx;
  font-size: 33rpx;
  font-family: SimHei;
  font-weight: 400;
  color: #969696;
}
.tel-right{
  position:absolute;
  right:10rpx;
}
.tel-right-text{
  position:absolute;
  font-size: 29rpx;
  right:10rpx;
  color: #B5B5B5;
}
.tel_main{
  padding-left: 20rpx;
  padding-top: 15rpx;
  font-size: 33rpx;
  font-family: SimHei;
  font-weight: 400;
  color: #2C2C2C;
}
.tel_item{
  position: relative;
  margin-left: 20rpx;
  margin-right: 20rpx;
  padding-bottom: 15rpx;
  padding-top: 15rpx;
  border-bottom: 4rpx solid #edece8;
}
.tel_item:last-child{
  border:none;
}
.tel_item_nam{
  font-size: 27rpx;
  font-family: SimHei;
  font-weight: 400;
  color: #818181;
}
.zhiifu{
  padding: 20rpx;
}
.detail_more .more_title {
  font-family: SimHei;
  font-weight: 400;
  padding-left: 27rpx;
  padding-top: 28rpx;
  padding-bottom: 28rpx;
  border-bottom: 6rpx solid #edece8;
  font-size: 34rpx;
  color: #969696;
}
.btm_tool {
  border-top: 1rpx solid #ccc;
  position: fixed;
  left: 0;
  bottom: 0;
  width: 100%;
  height: 90rpx;
  background-color: #fff;
  display: flex;
}
.btm_tool .tool_item {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  font-size: 24rpx;
  position: relative;
}
.btm_tool .tool_item button {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  opacity: 0;
}
.btm_tool .btn_cart {
  flex: 2;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  background-color: #ffa500;
  color: #fff;
  font-size: 30rpx;
  font-weight: 600;
}
.btm_tool .btn_buy {
  flex: 2;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  background-color: #eb4450;
  color: #fff;
  font-size: 30rpx;
  font-weight: 600;
}
