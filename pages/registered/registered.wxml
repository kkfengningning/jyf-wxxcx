<!--pages/registered/registered.wxml-->
<van-cell-group>
  <van-action-sheet
    show="{{ show }}"
    actions="{{ actions }}"
    bind:close="onClose"
    bind:select="onSelect"
   />
  <van-cell title="类型" bindtap="typeChange" is-link value="{{type}}" />
  <van-field
  model:value="{{ name }}"
    label="用户名"
    placeholder="请输入用户名"
    required
  />
  <van-field
  model:value="{{ mobilePhone }}"
    label="手机号"
    placeholder="请输入手机号"
    border="{{ true }}"
    required
  />
  <van-field
  model:value="{{ telephoneNumber }}"
    label="电话号码"
    placeholder="请输入手机号"
    border="{{ true }}"
    required
  />
  <van-field
  model:value="{{ wechatNumber }}"
    label="微信"
    placeholder="请输入微信号"
    required
  />
  <picker mode="region" bindchange="bindRegionChange" value="{{region}}" custom-item="{{customItem}}">
    <van-cell title="地区"  is-link>
      <view class="van-cell-text" slot="value">
        {{region[0]}}，{{region[1]}}，{{region[2]}}
       </view>
    </van-cell>
  </picker>
  <van-action-sheet
    show="{{ jymsshow }}"
    actions="{{ jymsactions }}"
    bind:close="onjymsClose"
    bind:select="onjymsSelect"
   />
  <van-cell title="经营模式" bindtap="jymsChange" is-link value="{{managementModel}}" />
  <van-action-sheet
    show="{{ shfwshow }}"
    actions="{{ shfwactions }}"
    bind:close="onshfwClose"
    bind:select="onshfwSelect"
   />
  <van-cell title="收货范围" bindtap="shfwChange" is-link value="{{receivingRange}}" />
  <van-field
  model:value="{{ receivingRange }}"
    label="收货类型"
    placeholder="请选择收获类型"
    required
  />
  <van-action-sheet
    show="{{ shfsshow }}"
    actions="{{ shfsactions }}"
    bind:close="onshfsClose"
    bind:select="onshfsSelect"
   />
  <van-cell title="收货方式" bindtap="shfsChange" is-link value="{{receivingMethod}}" />
  <van-cell title="公司介绍"  />
  <hf_editor width="100%" height="600rpx" insertPicture="{{true}}" placeholder="编写文章..." bind:Content="getHtml" bind:insertImage="insertImage" id="hf_editor"/>
  <van-button  size="large" round type="primary">立即注册</van-button>
</van-cell-group>